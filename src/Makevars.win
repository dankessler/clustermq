CXX_STD = CXX11
GCC_VERSION = ${subst gcc,,${COMPILED_BY}}
RWINLIB = ../windows/zeromq-4.2.1

PKG_CPPFLAGS = -DSTRICT_R_HEADERS -DZMQ_STATIC -DZMQ_BUILD_DRAFT_API=1 \
	-I${RWINLIB}/include -Ilibzmq/include -Icppzmq

PKG_LIBS = \
	-L${RWINLIB}/lib${GCC_VERSION}${R_ARCH} \
	-L${RWINLIB}/lib${R_ARCH} \
 	-Llibzmq/src/.libs \
	-lzmq -lsodium -liphlpapi -lws2_32

all: clean winlibs

clean:
	rm -f $(OBJECTS) $(SHLIB)

winlibs:
	"${R_HOME}/bin${R_ARCH_BIN}/Rscript.exe" "../tools/winlibs.R"
